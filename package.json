{
  "name": "tools",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "debug": "NODE_OPTIONS='--inspect' next",
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "command:eslint": "eslint --ignore-path .gitignore --ext js,jsx,ts,tsx",
    "command:esw": "esw --watch --ignore-path .gitignore --color",
    "command:prettier": "prettier",
    "format": "run-s 'command:prettier --check {1:=.}' --",
    "format:fix": "run-s 'command:prettier --write {1:=.}' --",
    "lint": "run-s 'command:eslint {1:=.}' --",
    "lint:fix": "run-s 'command:eslint --fix {1:=.}' --",
    "lint:watch": "run-s 'command:esw {1:=.}' --",
    "test": "jest",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook"
  },
  "dependencies": {
    "@jukben/emoji-search": "^2.0.1",
    "@material-ui/core": "^4.12.2",
    "@material-ui/icons": "^4.11.2",
    "@material-ui/lab": "^4.0.0-alpha.60",
    "classnames": "^2.3.1",
    "next": "^10.2.3",
    "prettier": "^2.3.2",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-syntax-highlighter": "^15.4.4",
    "react-use-clipboard": "^1.0.7"
  },
  "devDependencies": {
    "@babel/core": "^7.14.8",
    "@storybook/addon-actions": "^6.3.4",
    "@storybook/addon-essentials": "^6.3.6",
    "@storybook/addon-links": "^6.3.6",
    "@storybook/react": "^6.3.6",
    "@testing-library/jest-dom": "^5.14.1",
    "@testing-library/react": "^11.2.7",
    "@types/classnames": "^2.3.1",
    "@types/react-test-renderer": "^17.0.1",
    "@typescript-eslint/eslint-plugin": "^4.28.5",
    "@typescript-eslint/parser": "^4.28.5",
    "babel-eslint": "^10.1.0",
    "babel-loader": "^8.2.2",
    "babel-plugin-react-require": "^3.1.3",
    "eslint": "^7.31.0",
    "eslint-config-amercier": "^2.0.0-alpha.12",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-jest": "^24.4.0",
    "eslint-plugin-jsdoc": "^33.3.0",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^5.1.0",
    "eslint-plugin-react": "^7.24.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "eslint-plugin-standard": "^5.0.0",
    "eslint-watch": "^7.0.0",
    "husky": "^6.0.0",
    "jest": "^26.6.3",
    "jest-extended": "^0.11.5",
    "lint-staged": "^11.1.1",
    "npm-run-all": "^4.1.5",
    "react-is": "^17.0.1",
    "react-test-renderer": "^17.0.2",
    "typescript": "^4.3.5"
  },
  "jest": {
    "collectCoverageFrom": [
      "<rootDir>/src/**/*.{js,jsx,ts,tsx}"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "yarn test"
    }
  },
  "lint-staged": {
    "*.{css,json,jsx?,html,md,mdx,tsx?,ya?ml}": [
      "yarn format"
    ],
    "*.{jsx?,tsx?}": [
      "yarn lint"
    ]
  }
}
